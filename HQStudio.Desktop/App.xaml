<Application x:Class="HQStudio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:HQStudio.Converters"
             StartupUri="Views/SplashWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Theme.xaml"/>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Styles/Controls.xaml"/>
                <ResourceDictionary Source="Styles/ScrollBar.xaml"/>
                <ResourceDictionary Source="Styles/ComboBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:CountToVisibilityConverter x:Key="CountToVisibility"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
            <converters:GreaterThanOneToVisibilityConverter x:Key="GreaterThanOneToVisibility"/>
            <converters:EqualityConverter x:Key="EqualityConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibility"/>
            <converters:GrowthToColorConverter x:Key="GrowthToColor"/>
            <converters:PercentageConverter x:Key="PercentageConverter"/>
            
            <!-- Dynamic Theme Brushes -->
            <SolidColorBrush x:Key="BgPrimaryBrush" Color="#0A0A0A"/>
            <SolidColorBrush x:Key="BgSecondaryBrush" Color="#0D0D0D"/>
            <SolidColorBrush x:Key="BgCardBrush" Color="#141414"/>
            <SolidColorBrush x:Key="BgInputBrush" Color="#1A1A1A"/>
            <SolidColorBrush x:Key="BgHoverBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="BgIconBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="BgAvatarBrush" Color="#1A1A1A"/>
            <SolidColorBrush x:Key="BgDialogBrush" Color="#0A0A0A"/>
            <SolidColorBrush x:Key="BgDialogHeaderBrush" Color="#0D0D0D"/>
            <SolidColorBrush x:Key="BorderDefaultBrush" Color="#2A2A2A"/>
            <SolidColorBrush x:Key="BorderLightBrush" Color="#3A3A3A"/>
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B0B0B0"/>
            <SolidColorBrush x:Key="TextMutedBrush" Color="#707070"/>
            <SolidColorBrush x:Key="BtnPrimaryBgBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="BtnPrimaryFgBrush" Color="#0A0A0A"/>
            <SolidColorBrush x:Key="BtnSecondaryBorderBrush" Color="#3A3A3A"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
