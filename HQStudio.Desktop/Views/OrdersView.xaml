<UserControl x:Class="HQStudio.Views.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Style="{DynamicResource TextH1}">
                <TextBlock.Effect>
                    <DropShadowEffect Color="White" BlurRadius="15" ShadowDepth="0" Opacity="0.2"/>
                </TextBlock.Effect>
                –ó–ê–ö–ê–ó–´
            </TextBlock>
            <TextBlock Text="–£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –∑–∞–∫–∞–∑–∞–º–∏ ‚Ä¢ –î–≤–æ–π–Ω–æ–π –∫–ª–∏–∫ –¥–ª—è —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è" 
                       Style="{DynamicResource TextBody}" Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Toolbar -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Border Background="{DynamicResource BgHoverBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,12,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="–í—Å–µ–≥–æ: " FontSize="13" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalOrders}" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Button Content="üîÑ" Style="{DynamicResource SecondaryButton}" Padding="8" MinWidth="36" Height="36"
                        Command="{Binding RefreshCommand}" ToolTip="–û–±–Ω–æ–≤–∏—Ç—å"/>
                <Button Content="üîç –§–∏–ª—å—Ç—Ä" Style="{DynamicResource SecondaryButton}" Margin="12,0,0,0"
                        Command="{Binding ToggleFilterCommand}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="üìä Excel" Style="{DynamicResource SecondaryButton}" Margin="0,0,12,0"
                        Command="{Binding ExportToExcelCommand}" ToolTip="–≠–∫—Å–ø–æ—Ä—Ç –≤ Excel"/>
                <Button Content="üñ®Ô∏è –ü–µ—á–∞—Ç—å" Style="{DynamicResource SecondaryButton}" Margin="0,0,12,0"
                        Command="{Binding PrintOrderCommand}" ToolTip="–ü–µ—á–∞—Ç—å –∑–∞–∫–∞–∑–∞"/>
                <Button Content="‚úì –ó–∞–≤–µ—Ä—à–∏—Ç—å" Style="{DynamicResource BtnSuccess}" Margin="0,0,12,0"
                        Command="{Binding CompleteOrderCommand}"/>
                <Button Content="+ –ù–æ–≤—ã–π –∑–∞–∫–∞–∑" Style="{DynamicResource BtnPrimary}"
                        Command="{Binding AddOrderCommand}"/>
            </StackPanel>
        </Grid>
        
        <!-- Filter Panel -->
        <Border Grid.Row="2" Style="{DynamicResource Card}" Padding="20" Margin="0,0,0,16"
                Visibility="{Binding IsFilterVisible, Converter={StaticResource BoolToVisibility}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- –°—Ç–∞—Ç—É—Å -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="–°–¢–ê–¢–£–°" Style="{DynamicResource TextLabel}" Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding StatusOptions}" SelectedItem="{Binding SelectedStatus}"
                              Style="{DynamicResource ComboBoxStyle}" Height="40"/>
                </StackPanel>
                
                <!-- –î–∞—Ç–∞ -->
                <StackPanel Grid.Column="1" Margin="0,0,20,0">
                    <TextBlock Text="–ü–ï–†–ò–û–î" Style="{DynamicResource TextLabel}" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <DatePicker SelectedDate="{Binding FilterDateFrom}" 
                                    Style="{DynamicResource DatePickerStyle}" Width="140"/>
                        <TextBlock Text="‚Äî" VerticalAlignment="Center" Margin="12,0" 
                                   Foreground="{DynamicResource TextMutedBrush}" FontSize="16"/>
                        <DatePicker SelectedDate="{Binding FilterDateTo}" 
                                    Style="{DynamicResource DatePickerStyle}" Width="140"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- –ö–ª–∏–µ–Ω—Ç -->
                <StackPanel Grid.Column="2" Margin="0,0,20,0">
                    <TextBlock Text="–ö–õ–ò–ï–ù–¢" Style="{DynamicResource TextLabel}" Margin="0,0,0,8"/>
                    <TextBox Text="{Binding FilterClientName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{DynamicResource InputText}" Height="40"/>
                </StackPanel>
                
                <!-- –ö–Ω–æ–ø–∫–∏ -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="–ü—Ä–∏–º–µ–Ω–∏—Ç—å" Style="{DynamicResource BtnPrimary}" 
                            Command="{Binding ApplyFilterCommand}" Margin="0,0,10,0" Padding="20,10"/>
                    <Button Content="–°–±—Ä–æ—Å–∏—Ç—å" Style="{DynamicResource BtnSecondary}"
                            Command="{Binding ClearFilterCommand}" Padding="20,10"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.Row="3" Background="#80000000" CornerRadius="16" Panel.ZIndex="100"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Width="60" Height="60" CornerRadius="30" Background="{DynamicResource BgIconBrush}" Margin="0,0,0,16">
                    <TextBlock Text="‚è≥" FontSize="28" Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="LoadingRotate" CenterX="14" CenterY="14"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="(TextBlock.RenderTransform).(RotateTransform.Angle)"
                                                         From="0" To="360" Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </Border>
                <TextBlock Text="–ó–∞–≥—Ä—É–∑–∫–∞ –∑–∞–∫–∞–∑–æ–≤..." FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}"/>
            </StackPanel>
        </Border>

        <!-- Orders List -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,16,0,0">
            <ItemsControl ItemsSource="{Binding Orders}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{DynamicResource CardHoverable}" Margin="0,0,0,12"
                                MouseLeftButtonDown="Order_MouseLeftButtonDown"
                                Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Order Number -->
                                <Border Grid.Column="0" Width="64" Height="64" CornerRadius="14" 
                                        Background="{DynamicResource BgIconBrush}" Margin="0,0,20,0">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="#" FontSize="12" Foreground="#505050" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Id}" FontSize="20" FontWeight="Bold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Order Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ClientDisplay}" 
                                               FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding ServicesDisplay}" Style="{DynamicResource TextBody}"
                                               TextTrimming="CharacterEllipsis" MaxWidth="350" Margin="0,0,0,4"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="üìÖ" FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding CreatedAt, StringFormat=dd.MM.yyyy –≤ HH:mm}" 
                                                   Style="{DynamicResource TextSmall}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Status Badge -->
                                <Border Grid.Column="2" CornerRadius="8" Padding="14,8" Margin="0,0,24,0"
                                        VerticalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#2A2A2A"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="–ó–∞–≤–µ—Ä—à–µ–Ω">
                                                    <Setter Property="Background" Value="#1A2A1A"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="–í —Ä–∞–±–æ—Ç–µ">
                                                    <Setter Property="Background" Value="#2A2A1A"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock FontSize="12" FontWeight="Medium">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#909090"/>
                                                <Setter Property="Text" Value="{Binding Status}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="–ó–∞–≤–µ—Ä—à–µ–Ω">
                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="–í —Ä–∞–±–æ—Ç–µ">
                                                        <Setter Property="Foreground" Value="#FFC107"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>

                                <!-- Price -->
                                <StackPanel Grid.Column="3" VerticalAlignment="Center" MinWidth="120" 
                                            HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N0} ‚ÇΩ}" 
                                               FontSize="22" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" 
                                               HorizontalAlignment="Right"/>
                                    <TextBlock Text="–°—É–º–º–∞ –∑–∞–∫–∞–∑–∞" Style="{DynamicResource TextSmall}" 
                                               HorizontalAlignment="Right" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State -->
        <StackPanel Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="{Binding ShowEmptyState, Converter={StaticResource BoolToVisibility}}">
            <Border Width="80" Height="80" CornerRadius="40" Background="{DynamicResource BgIconBrush}" Margin="0,0,0,20">
                <TextBlock Text="üìã" FontSize="36" Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="–ó–∞–∫–∞–∑–æ–≤ –ø–æ–∫–∞ –Ω–µ—Ç" Style="{DynamicResource TextH3}" HorizontalAlignment="Center"/>
            <TextBlock Text="–°–æ–∑–¥–∞–π—Ç–µ –ø–µ—Ä–≤—ã–π –∑–∞–∫–∞–∑" Style="{DynamicResource TextSmall}" HorizontalAlignment="Center" Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Pagination -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0"
                    Visibility="{Binding TotalPages, Converter={StaticResource GreaterThanOneToVisibility}, FallbackValue=Collapsed}">
            <Button Content="‚óÄ –ù–∞–∑–∞–¥" Command="{Binding PreviousPageCommand}" 
                    Style="{DynamicResource SecondaryButton}" Margin="0,0,10,0"/>
            
            <TextBlock Text="{Binding PageInfo}" VerticalAlignment="Center" 
                       Margin="10,0,10,0" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
            
            <Button Content="–í–ø–µ—Ä—ë–¥ ‚ñ∂" Command="{Binding NextPageCommand}" 
                    Style="{DynamicResource SecondaryButton}" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
