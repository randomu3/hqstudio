<UserControl x:Class="HQStudio.Views.ClientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Style="{DynamicResource TextH1}">
                <TextBlock.Effect>
                    <DropShadowEffect Color="White" BlurRadius="15" ShadowDepth="0" Opacity="0.2"/>
                </TextBlock.Effect>
                –ö–õ–ò–ï–ù–¢–´
            </TextBlock>
            <TextBlock Text="–ë–∞–∑–∞ –∫–ª–∏–µ–Ω—Ç–æ–≤ ‚Ä¢ –î–≤–æ–π–Ω–æ–π –∫–ª–∏–∫ –¥–ª—è —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è" 
                       Style="{DynamicResource TextBody}" Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Toolbar -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Border Background="{DynamicResource BgHoverBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,12,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="–í—Å–µ–≥–æ: " FontSize="13" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalClients}" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Button Content="üîÑ" Style="{DynamicResource SecondaryButton}" Padding="8" MinWidth="36" Height="36"
                        Command="{Binding RefreshCommand}" ToolTip="–û–±–Ω–æ–≤–∏—Ç—å"/>
            </StackPanel>

            <TextBox Grid.Column="1" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Style="{DynamicResource InputSearch}" HorizontalAlignment="Left" Margin="12,0,0,0"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="üìä Excel" Style="{DynamicResource SecondaryButton}" Margin="0,0,12,0"
                        Command="{Binding ExportToExcelCommand}" ToolTip="–≠–∫—Å–ø–æ—Ä—Ç –≤ Excel"/>
                <Button Content="üóëÔ∏è –£–¥–∞–ª–∏—Ç—å" Style="{DynamicResource BtnDanger}" Margin="0,0,12,0"
                        Command="{Binding DeleteClientCommand}"/>
                <Button Content="+ –î–æ–±–∞–≤–∏—Ç—å –∫–ª–∏–µ–Ω—Ç–∞" Style="{DynamicResource BtnPrimary}"
                        Command="{Binding AddClientCommand}"/>
            </StackPanel>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.Row="2" Background="#80000000" CornerRadius="16" Panel.ZIndex="100"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Width="60" Height="60" CornerRadius="30" Background="{DynamicResource BgIconBrush}" Margin="0,0,0,16">
                    <TextBlock Text="‚è≥" FontSize="28" Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="LoadingRotate" CenterX="14" CenterY="14"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="(TextBlock.RenderTransform).(RotateTransform.Angle)"
                                                         From="0" To="360" Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </Border>
                <TextBlock Text="–ó–∞–≥—Ä—É–∑–∫–∞ –∫–ª–∏–µ–Ω—Ç–æ–≤..." FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}"/>
            </StackPanel>
        </Border>

        <!-- Clients List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,16,0,0">
            <ItemsControl ItemsSource="{Binding Clients}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{DynamicResource CardHoverable}" Margin="0,0,0,12" Padding="20"
                                MouseLeftButtonDown="Client_MouseLeftButtonDown">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Width="50" Height="50" CornerRadius="25" 
                                        Background="{DynamicResource BgIconBrush}" Margin="0,0,16,0">
                                    <TextBlock Text="üë§" FontSize="22" Foreground="{DynamicResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontSize="15" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Phone}" Style="{DynamicResource TextSmall}" Margin="0,0,16,0"/>
                                        <TextBlock Text="{Binding Car}" Style="{DynamicResource TextSmall}" Foreground="#909090"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <Border Background="{DynamicResource BgIconBrush}" CornerRadius="6" Padding="10,5" Margin="0,0,0,4">
                                        <TextBlock Text="{Binding CarNumber}" FontSize="13" Foreground="{DynamicResource TextPrimaryBrush}" 
                                                   FontFamily="Consolas" FontWeight="SemiBold"/>
                                    </Border>
                                    <TextBlock Text="{Binding CreatedAt, StringFormat=dd.MM.yyyy}" 
                                               Style="{DynamicResource TextSmall}" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="{Binding Clients.Count, Converter={StaticResource CountToVisibility}}">
            <Border Width="80" Height="80" CornerRadius="40" Background="{DynamicResource BgIconBrush}" Margin="0,0,0,20">
                <TextBlock Text="üë•" FontSize="36" Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="–ö–ª–∏–µ–Ω—Ç–æ–≤ –ø–æ–∫–∞ –Ω–µ—Ç" Style="{DynamicResource TextH3}" HorizontalAlignment="Center"/>
            <TextBlock Text="–î–æ–±–∞–≤—å—Ç–µ –ø–µ—Ä–≤–æ–≥–æ –∫–ª–∏–µ–Ω—Ç–∞" Style="{DynamicResource TextSmall}" HorizontalAlignment="Center" Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Pagination -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0"
                    Visibility="{Binding TotalPages, Converter={StaticResource GreaterThanOneToVisibility}, FallbackValue=Collapsed}">
            <Button Content="‚óÄ –ù–∞–∑–∞–¥" Command="{Binding PreviousPageCommand}" 
                    Style="{DynamicResource SecondaryButton}" Margin="0,0,10,0"/>
            
            <TextBlock Text="{Binding PageInfo}" VerticalAlignment="Center" 
                       Margin="10,0,10,0" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
            
            <Button Content="–í–ø–µ—Ä—ë–¥ ‚ñ∂" Command="{Binding NextPageCommand}" 
                    Style="{DynamicResource SecondaryButton}" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
