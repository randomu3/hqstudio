<Window x:Class="HQStudio.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HQStudio.ViewModels"
        xmlns:behaviors="clr-namespace:HQStudio.Desktop.Behaviors"
        Title="HQ Studio - Вход" 
        Height="580" Width="420"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown"
        FocusManager.FocusedElement="{Binding ElementName=UsernameBox}"
        Icon="/Resources/app.ico">
    
    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Border Background="{DynamicResource BgLoginBrush}" CornerRadius="20" 
            BorderBrush="{DynamicResource BorderLoginBrush}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="5" Opacity="0.2"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="HQ Studio" FontSize="12" Foreground="{DynamicResource TextMutedBrush}" 
                               VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <Button Content="✕" HorizontalAlignment="Right" Margin="10,0" 
                            Click="CloseButton_Click" Style="{DynamicResource BtnIcon}"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Center" Margin="50,20">
                    
                    <!-- Logo with Glow Effect -->
                    <Border Margin="0,0,0,4">
                        <TextBlock Text="HQ" FontSize="56" FontWeight="Bold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center"
                                   FontFamily="Segoe UI Black">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{DynamicResource TextPrimary}" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Border>
                    
                    <TextBlock Text="STUDIO" FontSize="22" FontWeight="Light" 
                               Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"
                               Margin="0,0,0,4"/>
                    
                    <TextBlock Text="ТЮНИНГ АВТОМОБИЛЕЙ" FontSize="10" 
                               Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Center"
                               Margin="0,0,0,28"/>

                    <!-- Login Form -->
                    <TextBlock Text="ЛОГИН" Style="{DynamicResource TextLabel}" Margin="0,0,0,8"/>
                    <TextBox x:Name="UsernameBox" 
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{DynamicResource InputText}" Margin="0,0,0,16"
                             FontSize="14" TabIndex="0"
                             KeyDown="InputField_KeyDown"/>

                    <TextBlock Text="ПАРОЛЬ" Style="{DynamicResource TextLabel}" Margin="0,0,0,8"/>
                    <PasswordBox x:Name="PasswordBox" Style="{DynamicResource InputPassword}" 
                                 Margin="0,0,0,4" PasswordChanged="PasswordBox_PasswordChanged"
                                 TabIndex="1" KeyDown="InputField_KeyDown"
                                 behaviors:CapsLockBehavior.IsEnabled="True"/>

                    <!-- Caps Lock Warning -->
                    <TextBlock x:Name="CapsLockWarning" 
                               Text="⚠ Caps Lock включён" 
                               Foreground="{DynamicResource AccentYellowBrush}" 
                               FontSize="11" 
                               Margin="0,4,0,0"
                               Visibility="{Binding ElementName=PasswordBox, Path=(behaviors:CapsLockBehavior.IsCapsLockOn), Converter={StaticResource BoolToVisibility}}"/>

                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="{DynamicResource AccentRedBrush}" 
                               FontSize="12" Margin="0,4,0,16" HorizontalAlignment="Center"
                               MinHeight="16"/>

                    <!-- Login Button -->
                    <Button Content="ВОЙТИ" Command="{Binding LoginCommand}"
                            Style="{DynamicResource BtnPrimary}" Height="44" TabIndex="2"
                            IsDefault="True"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Loading Overlay -->
            <Border Grid.Row="1" Background="{DynamicResource BgOverlayBrush}" CornerRadius="0,0,20,20"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border Width="60" Height="60" CornerRadius="30" Background="{DynamicResource BgIconBrush}" Margin="0,0,0,16">
                        <TextBlock Text="⟳" FontSize="28" Foreground="{DynamicResource TextPrimaryBrush}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Вход в систему..." FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- Server Error Overlay - Minimalist B&W style -->
            <Border Grid.RowSpan="2" Background="{DynamicResource BgOverlayBrush}" CornerRadius="20"
                    Visibility="{Binding ShowServerError, Converter={StaticResource BoolToVisibility}}">
                
                <!-- Centered modal card -->
                <Border Background="{DynamicResource BgCardBrush}" CornerRadius="16" 
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        BorderBrush="{DynamicResource BorderDefaultBrush}" BorderThickness="1"
                        MaxWidth="320" Margin="24">
                    <StackPanel Margin="32">
                        
                        <!-- Icon -->
                        <Border Width="64" Height="64" CornerRadius="32" 
                                Background="{DynamicResource BgInputBrush}"
                                HorizontalAlignment="Center" Margin="0,0,0,20">
                            <TextBlock Text="!" FontSize="32" FontWeight="Bold" 
                                       Foreground="{DynamicResource TextPrimaryBrush}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Title -->
                        <TextBlock Text="Сервер недоступен" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        
                        <!-- Description -->
                        <TextBlock Text="Авторизация временно невозможна" FontSize="13" 
                                   Foreground="{DynamicResource TextMutedBrush}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,24"/>
                        
                        <!-- Divider -->
                        <Border Height="1" Background="{DynamicResource BorderDefaultBrush}" Margin="0,0,0,20"/>
                        
                        <!-- Contact section -->
                        <TextBlock Text="СВЯЗАТЬСЯ С РАЗРАБОТЧИКОМ" FontSize="10" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextMutedBrush}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        
                        <!-- Contact buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,24">
                            <!-- Telegram -->
                            <Button Click="TelegramButton_Click" Cursor="Hand" Margin="0,0,8,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="bd" Background="{DynamicResource BgInputBrush}" 
                                                            BorderBrush="{DynamicResource BorderDefaultBrush}"
                                                            BorderThickness="1" CornerRadius="10" Padding="14,10">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="✈" FontSize="14" 
                                                                       Foreground="{DynamicResource TextPrimaryBrush}" 
                                                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                            <TextBlock Text="@xxxu7" FontSize="12" FontWeight="Medium"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}" 
                                                                       VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="bd" Property="BorderBrush" 
                                                                    Value="{DynamicResource TextPrimaryBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <!-- VK -->
                            <Button Click="VkButton_Click" Cursor="Hand" Margin="8,0,0,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="bd" Background="{DynamicResource BgInputBrush}" 
                                                            BorderBrush="{DynamicResource BorderDefaultBrush}"
                                                            BorderThickness="1" CornerRadius="10" Padding="14,10">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="VK" FontSize="12" FontWeight="Bold"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}" 
                                                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                            <TextBlock Text="xxxuy" FontSize="12" FontWeight="Medium"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}" 
                                                                       VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="bd" Property="BorderBrush" 
                                                                    Value="{DynamicResource TextPrimaryBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                        
                        <!-- Retry Button -->
                        <Button Content="Повторить" Command="{Binding RetryConnectionCommand}"
                                Style="{DynamicResource BtnPrimary}" Height="44"/>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>
    </Border>
</Window>
