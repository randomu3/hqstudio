<Window x:Class="HQStudio.Views.Dialogs.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" 
        SizeToContent="Height"
        MinHeight="180"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        KeyDown="Window_KeyDown">
    
    <Border Background="{DynamicResource BgPrimaryBrush}" CornerRadius="16" 
            BorderBrush="{DynamicResource BorderDefaultBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource BgSecondaryBrush}" 
                    CornerRadius="16,16,0,0" Padding="20,14">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="IconText" Text="✓" FontSize="18" Margin="0,0,10,0" 
                                   VerticalAlignment="Center" Foreground="#4CAF50"/>
                        <TextBlock x:Name="TitleText" Text="Подтверждение" FontSize="15" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="✕" Click="Close_Click" Style="{DynamicResource BtnIcon}"
                            HorizontalAlignment="Right" Width="32" Height="32"/>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="24,24" VerticalAlignment="Top">
                <TextBlock x:Name="MessageText" Text="Сообщение" FontSize="15" TextWrapping="Wrap"
                           Foreground="{DynamicResource TextPrimaryBrush}" LineHeight="24"/>
            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="2" Padding="20,16" BorderBrush="{DynamicResource BorderDefaultBrush}" 
                    BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="NoBtn" Grid.Column="0" Content="Нет" Click="No_Click" 
                            Style="{DynamicResource BtnSecondary}" Margin="0,0,8,0" Padding="20,10"/>
                    <Button x:Name="YesBtn" Grid.Column="1" Content="Да" Click="Yes_Click" 
                            Style="{DynamicResource BtnSuccess}" Margin="8,0,0,0" Padding="20,10"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
