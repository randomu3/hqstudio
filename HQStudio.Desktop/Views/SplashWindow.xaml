<Window x:Class="HQStudio.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HQ Studio" 
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True">

    <Border Background="{DynamicResource BgLoginBrush}" CornerRadius="24" 
            BorderBrush="{DynamicResource BorderLoginBrush}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="5" Opacity="0.15"/>
        </Border.Effect>
        
        <Grid>
            <!-- Background Glow -->
            <Ellipse Width="400" Height="400" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-50,0,0">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="{DynamicResource TextPrimary}" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
                <Ellipse.OpacityMask>
                    <RadialGradientBrush>
                        <GradientStop Color="#15FFFFFF" Offset="0"/>
                        <GradientStop Color="#00FFFFFF" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.OpacityMask>
            </Ellipse>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                
                <!-- Animated Logo -->
                <Border x:Name="LogoBorder" Margin="0,0,0,20">
                    <Border.RenderTransform>
                        <ScaleTransform x:Name="LogoScale" ScaleX="1" ScaleY="1"/>
                    </Border.RenderTransform>
                    <TextBlock x:Name="LogoText" Text="HQ" FontSize="120" FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center"
                               FontFamily="Segoe UI Black">
                        <TextBlock.Effect>
                            <DropShadowEffect x:Name="LogoGlow" Color="{DynamicResource TextPrimary}" BlurRadius="50" ShadowDepth="0" Opacity="0.7"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
                
                <TextBlock x:Name="StudioText" Text="STUDIO" FontSize="42" FontWeight="Light" 
                           Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Center" Opacity="0"/>
                
                <TextBlock x:Name="TaglineText" Text="ПРОФЕССИОНАЛЬНЫЙ ТЮНИНГ АВТОМОБИЛЕЙ" 
                           FontSize="13" Foreground="{DynamicResource TextDarkBrush}" HorizontalAlignment="Center"
                           Margin="0,20,0,0" Opacity="0"/>

                <!-- Loading Bar -->
                <Border Margin="0,50,0,0" Width="300" Height="4" Background="{DynamicResource BgHoverBrush}" CornerRadius="2">
                    <Border x:Name="LoadingBar" Width="0" Height="4" Background="{DynamicResource TextPrimaryBrush}" 
                            CornerRadius="2" HorizontalAlignment="Left">
                        <Border.Effect>
                            <DropShadowEffect Color="{DynamicResource TextPrimary}" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                        </Border.Effect>
                    </Border>
                </Border>

                <TextBlock x:Name="LoadingText" Text="Загрузка..." FontSize="12" 
                           Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,16,0,0" Opacity="0"/>
            </StackPanel>

            <!-- Version & Copyright -->
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,30">
                <TextBlock x:Name="VersionText" FontSize="11" Foreground="{DynamicResource TextDarkBrush}" HorizontalAlignment="Center"/>
                <TextBlock x:Name="CopyrightText" FontSize="10" Foreground="{DynamicResource TextDarkBrush}" 
                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
